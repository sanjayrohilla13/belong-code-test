#-----------------------------------------------------------------------------------------------------
# Application Level Variables
#-----------------------------------------------------------------------------------------------------
env                 = "dev"
app_name            = "BelongCodeTest"
time_zone           = "Australia/Melbourne"
#-----------------------------------------------------------------------------------------------------
# VPC Variables
#-----------------------------------------------------------------------------------------------------
region              = "ap-southeast-2"
az_list             = ["ap-southeast-2a", "ap-southeast-2b"] # Application will be deployed in 2 AZs 
vpc_cidr_block      = "10.0.0.0/24"                          # 256 IP address 10.0.0.0 to 10.0.0.255
private_cidr_blocks = ["10.0.0.0/28", "10.0.0.16/28"]        # 16 IP Address/Subnet
public_cidr_blocks  = ["10.0.0.32/28","10.0.0.48/28"]        # Public S/N 10.0.0.32-47 & 10.0.0.48-63
#-----------------------------------------------------------------------------------------------------
# WebServer - ASG Variables
#-----------------------------------------------------------------------------------------------------
instance_type       = "t2.micro"
key_name            = "demo-app-key"
min_size            = 1
max_size            = 6
desired_capacity    = 2
#-----------------------------------------------------------------------------------------------------
#Auto Scaling Variables
#-----------------------------------------------------------------------------------------------------
cw_high_threshold   = "80"
scale_out_adjustment= 1
cooldown_period     = "300"
cw_low_threshold    = "10"
scale_in_adjustment = -1